.top_view {
  margin-top: 10px;
  width: 100%;
  height: 96px;
  background-color: black;
}

.top_view .top_view_title {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 10px;
  color: white;
  font-size: 17px;
  font-weight: lighter;
}

.top_view .top_view_total_goods {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 5px;
  color: gainsboro;
  font-size: 14px;
  font-weight: lighter;
}

.top_view .top_view_total_money {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 5px;
  color: white;
  font-size: 14px;
  font-weight: lighter;
}

/*购物车  */
.shopping_cart {
  margin: 20px 15px 80px 15px;
}

.shopping-list {
  margin-bottom: 10px;
  height: 120px;
}

.flex {
  display: flex;
}

.goods-img {
  width: 96px;
  height: 120px;
  flex-shrink: 0;
}

.space-between {
  justify-content:space-between;
}

.main-r {
  display: flex;
  flex-direction: column;
}

.top10 {
  margin-top: 10px;
}

.goods-name {
  display: -webkit-box;
  margin-left: 10px;
  width: 165px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.delete-goods {
  margin-left: 10px;
  margin-top: 5px;
  display: flex;
  width: 14px;
  height: 14px;
}

.goods-price {
  margin-left: 10px;
  font-size: 16px;
}

.plus {
  margin-left: 10px;
  font-size: 16px;
  border-color: black;
  border-width: 1px;
  border-style: solid;
  width: 15px;
  height: 15px;
  line-height: 12px;
  margin-top: 3px;
}
.plus text {
  padding-left: 3px;
  padding-bottom: 2px;
  
}

.bottom-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  background-color: white;
}

.bottom-bar-price {
  margin-top: 10px;
  margin-left: 15px;
  line-height: 40px;
  width: 100px;
}

.bottom-bar .commit-btn {
  margin-top: 10px;
  margin-right: 10px;
  background-color: black;
  color: white;
  width: 160px;
  height: 40px;
  line-height: 40px;
  border-radius: 3rpx;
  font-size: 15px;
}