.row {
  margin-left: 40rpx;
  margin-top: 40rpx;
  margin-bottom: 200rpx;
}

.row-cell {
  display: flex;
  margin-top: 20rpx;
  flex-direction:column;
  border-color: white;
  border-bottom-color: #efefef;
  border-bottom-width: 1rpx;
  border-style: solid;
}

.address-name {
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
  font-weight: bold;
  font-size: 30rpx;
}

.address-detail {
  margin-left: 20rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.row-cell .address-name text {
  width: 480rpx;
}

.row-cell .address-name button {
  background-color: black;
  color: white;
  border-radius: 10rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  text-align: center;
}


.address-add {
  position: fixed;
  height: 80rpx;
  bottom: 20px;
  margin-left: 20%;
  width: 60%; 
}

.address-add image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.address-add text {
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  padding-left: 100rpx;
  color: gray;
}